{
  "version": 2,
  "framework": null,
  "builds": [
    {
      "src": "tweetapp/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/tweetapp/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "tweetapp.settings",
    "PYTHONPATH": "."
  }
} 